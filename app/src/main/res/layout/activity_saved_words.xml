<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SavedWords"
    android:orientation="vertical"
    android:background="#FFF"
    android:focusableInTouchMode="true">

    <android.support.v7.widget.RecyclerView
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/recyclerViewSavedWords">
    </android.support.v7.widget.RecyclerView>
    <ImageView
        android:layout_width="340dp"
        android:id="@+id/historyError"
        android:layout_height="450dp"
        android:layout_gravity="center"
        android:visibility="gone"
        android:layout_marginBottom="40dp"
        android:background="@drawable/history_error"/>
    <ImageView
        android:layout_width="340dp"
        android:id="@+id/historyErrorFavourite"
        android:layout_height="395dp"
        android:layout_gravity="center"
        android:visibility="gone"
        android:layout_marginBottom="40dp"
        android:background="@drawable/history_error_favourite1"/>

</FrameLayout>