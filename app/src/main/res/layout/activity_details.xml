<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView
        android:layout_width="160dp"
        android:id="@+id/wordNotFound"
        android:layout_height="142dp"
        android:layout_gravity="center"
        android:visibility="gone"
        android:layout_marginBottom="60dp"
        android:scaleType="fitCenter"
        android:background="@drawable/word_not_found"/>
    <ImageView
        android:layout_width="240dp"
        android:id="@+id/networkError"
        android:layout_height="332dp"
        android:layout_gravity="center"
        android:visibility="gone"
        android:scaleType="fitCenter"
        android:layout_marginBottom="55dp"
        android:background="@drawable/network_error"/>

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/progressBar"
        android:visibility="visible"/>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible"
        android:id="@+id/linearLayout"
        android:orientation="vertical"
        tools:context=".Details"
        android:layout_margin="10dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/wordName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:layout_weight="1"
                android:textStyle="bold" />

            <ProgressBar
                android:id="@+id/progressBarCircular"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_weight="0.01"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:indeterminate="false"
                android:layout_marginTop="3dp"
                android:progressDrawable="@drawable/circular_progress_bar"
                android:background="@drawable/circle_shape"
                style="?android:attr/progressBarStyleHorizontal"
                android:max="100"
                android:progress="20"
                android:visibility="gone"/>
            <ToggleButton
                android:id="@+id/pronunciation"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_weight="0.01"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:textOn=""
                android:textOff=""
                android:paddingTop="10dp"
                android:visibility="gone"
                android:layout_marginTop="3dp"
                android:background="@drawable/pronunciation"
                />

            <ToggleButton
                android:id="@+id/favourite"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:paddingTop="8dp"
                android:textOn=""
                android:textOff=""
                android:text="ToggleButton"
                android:layout_weight="0.01"
                android:visibility="invisible"
                android:background="@drawable/favourite"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/phonetic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <View style="@style/Divider.Horizontal"/>
        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:id="@+id/recyclerView1">
        </android.support.v7.widget.RecyclerView>
    </LinearLayout>
</FrameLayout>